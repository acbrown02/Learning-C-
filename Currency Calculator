#include <iostream>

int main() 

{
  double pesos;
  // pesos to USD = 0.059
  double reais;
  // reais to USD = 0.19
  double soles;
  // soles to USD = 0.27
  double dollars;

  std::cout << "Enter the number of Columbian Pesos: \n";
  std::cin >> pesos;

  std::cout << "Enter the amount of Bazilian Reais: \n";
  std::cin >> reais;

  std::cout << "Enter the number of Peruvian Soles: \n";
  std::cin >> soles; 
  
  
  dollars = (0.059 * pesos) + (0.19 * reais) + (0.27 * soles);
  
  std::cout << "US Dollars = $ " << dollars << "\n";

}
